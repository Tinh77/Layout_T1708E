@model IEnumerable<T1708ENewWeb.Models.Mark>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title float-left">
            Mark Student
            <small class="text-muted"></small>
        </h3>
        <a asp-action="Create" class="btn float-right"><i class="far fa-plus-square"></i> Create New</a>
        <div class="clearfix"></div>
        <div class="alert alert-success d-none" role="alert" id="messageSuccess"></div>
        <div class="alert alert-danger d-none" role="alert" id="messageError"></div>
        @if (!Model.Any())
        {
            <div class="row m-1">
                <form action="/admin/bakery/list" method="GET" class="form-inline" name="category-form">
                    <div class="form-group">
                        <label>Choose a category: </label>
                        <select name="categoryId" class="form-control m-3">
                            <option value="0">All</option>
                            @foreach (var item in Model)
                            {
                                <option value="0">
                                    <a asp-action="Index" asp-route-id="@item.Student.RollNumber"> @item.Student.LastName</a>
                                </option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr class="row">
                        <th class="col-md-1"></th>
                        <th class="col-md-2">@Html.DisplayNameFor(model => model.SubjectName)</th>
                        <th class="col-md-2">@Html.DisplayNameFor(model => model.SubjectMark)</th>
                        <th class="col-md-3">@Html.DisplayNameFor(model => model.Student)</th>
                        <th class="col-md-3">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row" id="row-item-@item.Id">
                            <td class="col-md-1 text-center">
                                <input type="checkbox" class="check-item" id="check-id-@item.Id">
                            </td>
                            <td class="col-md-2">@Html.DisplayFor(modelItem => item.SubjectName)</td>
                            <td class="col-md-2"> @Html.DisplayFor(modelItem => item.SubjectMark)</td>
                            <td class="col-md-3">@item.Student.LastName</td>
                            <td class="col-md-3">
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a href="#" id="@item.Id" class="btn-delete">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-8 form-inline">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="check-all">
                        <label class="form-check-label" for="defaultCheck1">
                            Check All
                        </label>
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <select id="select-action" class="form-control">
                            <option selected value="0">-- Hãy chọn lựa chọn của bạn --</option>
                            <option value="1">Chọn tất cả</option>
                            <option value="2">Lựa chọn khác</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mb-2" id="delete-all">Apply</button>
                </div>
                @*<div class="col-md-4">
                    <div class="float-right">
                        {{ $bakeries_in_view -> appends($_GET) -> links() }}
                    </div>
                </div>*@
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
               Hiện tại không có điểm nào
            </div>
        }
    </div>
</div>
